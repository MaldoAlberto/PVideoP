<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/android_card_view_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingBottom="@dimen/row_padding"
        android:paddingLeft="@dimen/general_padding"
        android:paddingRight="@dimen/general_padding"
        android:paddingTop="@dimen/row_padding">


        <ImageView
            android:elevation="10dp"
            android:id="@+id/img"
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:background="@drawable/video_foto"
            android:focusableInTouchMode="false" />

        <TextView
            android:id="@+id/txt"
            style="@style/RowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:paddingLeft="@dimen/row_padding" />

        <TextView
            android:id="@+id/subtitulo"
            style="@style/RowSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt"
            android:layout_alignStart="@+id/txt"
            android:layout_below="@+id/txt"
            android:paddingLeft="@dimen/row_padding" />
        <!--ImageButton
            android:id="@+id/opcion"
            android:background="@drawable/tarjeta"
            android:elevation="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_more"
            android:layout_alignLeft="@+id/txt"
            android:layout_alignStart="@+id/txt"
            android:layout_below="@+id/txt"
            android:onClick="dialogoOpciones"
            android:paddingLeft="@dimen/row_padding"
            android:rotation="90"
            android:layout_marginLeft="200dp" /-->

    </RelativeLayout>
    </android.support.v7.widget.CardView>